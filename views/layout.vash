<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Sirwan Afifi">
    <title>@model.title</title>
    <!-- Bootstrap core CSS -->
    <link href="css/bootstrap.css" rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="css/main.css" rel="stylesheet">
    <script src="lib/jquery/dist/jquery.min.js"></script>
    <script src="lib/hover.zoom.js"></script>
    <script src="lib/hover.zoom.conf.js"></script>
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
    @html.block("styles")
</head>
<body ng-app="bookDb" ng-cloak>
    <!-- Static navbar -->
    <div class="navbar navbar-inverse navbar-static-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="index.html">The Reader</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    @{
                    for (var i = 0; i < model.nav.length; i++) {
                    <li><a href="@model.nav[i].Link">@model.nav[i].Text</a></li>
                    }
                    }
                    <li>
                        @if (model.user) {
                            <a href="#">@model.user.name</a>
                        }
                    </li>
                </ul>
            </div><!--/.nav-collapse -->
        </div>
    </div>

    @html.block('body')
    
    <!-- +++++ Footer Section +++++ -->

    <div id="footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-4">
                    <h4>Who we are?</h4>
                    <p>
                        
                    </p>
                </div><!-- /col-lg-4 -->

                <div class="col-lg-4">
                    <h4>Links</h4>
                    <p>
                        
                    </p>
                </div><!-- /col-lg-4 -->

                <div class="col-lg-4">
                    
                </div><!-- /col-lg-4 -->

            </div>

        </div>
    </div>

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="min/allJS.min.js"></script>

    @html.block("scripts") 
</body>
</html>
